import matplotlib.pyplot as plt
temperature = [30, 32, 35, 36, 38, 40, 38, 36, 34, 32, 30, 28]
rainfall = [5, 10, 15, 25, 30, 40, 50, 45, 35, 20, 10, 5]
months = list(range(1, 13))
plt.plot(months, temperature, label='Temperature (Â°C)', color='red')
plt.xlabel("Month")
plt.ylabel("Temperature")
plt.title("Monthly Temperature")
plt.show()
plt.scatter(months, rainfall, label='Rainfall (mm)', color='blue')
plt.xlabel("Month")
plt.ylabel("Rainfall")
plt.title("Monthly Rainfall")
plt.show()
